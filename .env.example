# AgenticLedger Customer Database Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agenticledger_customer_db
DB_USER=platform_user
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_32_CHARS_MIN

# PostgreSQL Admin (for docker-compose only)
POSTGRES_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# pgAdmin Configuration (optional - only if using pgAdmin)
PGADMIN_EMAIL=admin@agenticledger.local
PGADMIN_PASSWORD=admin_password
PGADMIN_PORT=5050

# Application Configuration
# Add your AgenticLedger app configuration here
APP_ENV=production
APP_PORT=3000

# Cloud Connection (if using VPN/tunnel)
# TAILSCALE_IP=100.x.x.x
# CLOUDFLARE_TUNNEL_URL=https://db.yourdomain.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Security
SSL_MODE=disable  # Set to 'require' for production with SSL certificates
